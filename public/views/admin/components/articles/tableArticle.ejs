<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Title</th>
            <th>Slug</th>
            <th>Category</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        <% showArticles.forEach(article =>{ %>
        <tr>
            <td> <%= article.id %></td>
            <td> <%= article.title %> </td>
            <td> <%= article.slug %> </td>     
            <td> <%= article.category.title %> </td>
            <td>
                <a href="/admin/articles/edit/<%= article.id %>">
                    <button class="edit-button">Edit</button> 
                </a>
                <form class="form" method="POST" action="/articles/delete" onsubmit="deletePublication(event, this)">
                    <input class="inputId" name="id" value="<%= article.id %>">
                    <button class="delete-button"> Delete </button>
                </form>
            </td>
        </tr>
        <% }) %>
    </tbody>
</table>