<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Category</title>
    <link rel="stylesheet" type="text/css" href="/views/admin/css/index.css">
    <script type="text/javascript" src="/js/deletePublication.js"></script>
</head>
<body>
    <%- include ('../../../components/header.ejs') %>
    <h1>Category</h1>
    <div class="top-button">
        <a href="/admin/categories/new" >
            <button class="btn-main"> Add new category </button>
        </a>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Title</th>
                <th>Slug</th>
                <th>Action</th>
            </tr>
        </thead>    
        <tbody>            
            <% showCategories.forEach(category=>{ %>
            <tr>
                <th> <%= category.id %> </th>
                <th> <%= category.title %> </th>
                <th> <%= category.slug %> </th>
                <th>
                    <a href="/admin/categories/edit/<%= category.id %>">
                        <button class="edit-button">Edit</button> 
                    </a>
                    <form class="form" method="POST" action="/categories/delete" onsubmit="deletePublication(event, this)">
                        <input class="inputId" name="id" value="<%= category.id %>">
                        <button class="delete-button"> Delete </button>
                    </form>
                </th>
            </tr>
            <% }) %>
        </tbody>
    </table>
    
    <div class="my-button">
        <a href="/admin/categories/new" ><button class="btn-click"> New Category </button></a>
    </div>

</body>
</html>